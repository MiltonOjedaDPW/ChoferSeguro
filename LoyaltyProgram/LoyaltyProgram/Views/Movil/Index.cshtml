<body style="padding-top:0px; background-color: rgba(143,143,143,0.2);">
    <!-- <img src="img/Azul oscuro 1.jpg" class="img-fluid" alt=""> -->

    <div class="container">
        <nav class="navbar mb-2 sticky-top" style="background-color: #173A64">
            <img class="navbar-brand" src="~/img/Logo Caucedo blanco.png" alt="" width="140" height="50">
            <h5 id="title" style="float: right; font-size: 15px;" class="text-white">Programa de Lealtad</h5>
        </nav>

        <div>
            @*<h4>@chofer.PUNTOS_VISITAS_RECORD Visitas sin Incidentes</h4>*@
            @*<i class="fas fa-medal"></i>*@
            <h5><span class="badge badge-warning text-white pull-right"> @Model.chofer.PUNTOS_VISITAS_RECORD</span><span class="badge badge-light text-warning pull-right"> Visitas sin incidentes</span></h5>
            <br />
